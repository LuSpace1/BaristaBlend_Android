<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecetasActivity">

    <LinearLayout
        android:id="@+id/layoutTopFavorito"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackCoffe"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/md_theme_secondaryContainer"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconSize="30dp"
            app:iconTint="@color/md_theme_secondary" />

        <TextView
            android:id="@+id/textVie66"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:text="Favoritos"
            android:textAlignment="center"
            android:textSize="34sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConf"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/md_theme_secondaryContainer"
            app:icon="@android:drawable/ic_menu_preferences"
            app:iconSize="30dp"
            app:iconTint="@color/md_theme_secondary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/navBarMenu"
        app:layout_constraintTop_toBottomOf="@id/layoutTopFavorito"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/md_theme_tertiaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/navBarMenu"
                android:padding="12dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/hario_v60"
                    android:contentDescription="Icono Receta"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="V60 Tetsu Kasuya"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@android:drawable/btn_star"
                    app:iconSize="24dp"
                    android:backgroundTint="@color/md_theme_onTertiaryContainer"
                    app:iconTint="@android:color/holo_orange_light"
                    android:contentDescription="Favorito"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/md_theme_tertiaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/navBarMenu"
                android:padding="12dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/french_press_1"
                    android:contentDescription="Icono Receta"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Press French James Hoffman"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@android:drawable/btn_star"
                    app:iconSize="24dp"
                    android:backgroundTint="@color/md_theme_onTertiaryContainer"
                    app:iconTint="@android:color/holo_orange_light"
                    android:contentDescription="Favorito"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/md_theme_tertiaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/navBarMenu"
                android:padding="12dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/aeropress"
                    android:contentDescription="Icono Receta"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Artur David Ratio 1:6"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@android:drawable/btn_star"
                    app:iconSize="24dp"
                    android:backgroundTint="@color/md_theme_onTertiaryContainer"
                    app:iconTint="@android:color/holo_orange_light"
                    android:contentDescription="Favorito"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/md_theme_tertiaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/navBarMenu"
                android:padding="12dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/kalita"
                    android:contentDescription="Icono Receta"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kalita bloming extendido"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@android:drawable/btn_star"
                    app:iconSize="24dp"
                    android:backgroundTint="@color/md_theme_onTertiaryContainer"
                    app:iconTint="@android:color/holo_orange_light"
                    android:contentDescription="Favorito"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/md_theme_tertiaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/navBarMenu"
                android:padding="12dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chemex"
                    android:contentDescription="Icono Receta"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Classic Chemex"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@android:drawable/btn_star"
                    app:iconSize="24dp"
                    android:backgroundTint="@color/md_theme_onTertiaryContainer"
                    app:iconTint="@android:color/holo_orange_light"
                    android:contentDescription="Favorito"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/md_theme_tertiaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/navBarMenu"
                android:padding="12dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/origami"
                    android:contentDescription="Icono Receta"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Origami Tetsu Kasuya"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@android:drawable/btn_star"
                    app:iconSize="24dp"
                    android:backgroundTint="@color/md_theme_onTertiaryContainer"
                    app:iconTint="@android:color/holo_orange_light"
                    android:contentDescription="Favorito"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navBarMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHomeMenu"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:backgroundTint="@color/md_theme_primaryContainer"
            app:icon="@drawable/image_13"
            app:iconSize="40dp"
            app:iconTint="@color/md_theme_primary" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.IconButton"
            android:id="@+id/btnCoffeeMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_theme_primaryContainer"
            app:icon="@drawable/image_11"
            app:iconSize="40dp"
            app:iconTint="@color/md_theme_primary" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.IconButton"
            android:id="@+id/btnUserMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:backgroundTint="@color/md_theme_primaryContainer"
            app:icon="@drawable/image_7"
            app:iconSize="40dp"
            app:iconTint="@color/md_theme_primary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>