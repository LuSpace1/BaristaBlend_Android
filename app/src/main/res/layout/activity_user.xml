<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:padding="16dp"
    tools:context=".ui.usuario.UserActivity">



    <LinearLayout
        android:id="@+id/main_columns_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@color/md_theme_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_tertiaryContainer"
                android:gravity="center"
                android:padding="12dp"
                android:text="Recetas Favoritas"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="100dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/md_theme_secondary"
                android:text="Receta 1"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="100dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/md_theme_secondary"
                android:text="Receta 2"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="100dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/md_theme_secondary"
                android:text="Receta 3"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="100dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/md_theme_secondary"
                android:text="Receta 4"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/md_theme_secondary"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_tertiaryContainer"
                android:gravity="center"
                android:padding="12dp"
                android:text="Mis datos personales"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Teléfono"
                android:inputType="phone"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Dirección"
                android:inputType="textPostalAddress"
                android:padding="12dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/md_theme_tertiaryContainer"
                android:gravity="center"
                android:padding="12dp"
                android:text="Contáctanos"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="+56 9 1453 1625"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="Políticas de Seguridad"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="Ayuda"
                android:textColor="#333333" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnexit"
        android:layout_width="224dp"
        android:layout_height="47dp"
        android:layout_marginTop="15dp"
        android:text="Cerrar sesión"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/md_theme_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_columns_container"
        app:layout_constraintWidth_percent="0.6" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-15dp"
        tools:layout_editor_absoluteY="16dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackCoffe"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:padding="20dp"
            android:backgroundTint="@color/md_theme_secondaryContainer"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconSize="30dp"
            app:iconTint="@color/md_theme_secondary" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_theme_background"
            android:background="@color/md_theme_background"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            app:strokeWidth="0dp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView3"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/md_theme_background"
                android:background="@color/md_theme_background"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/image_7" />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConf"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:padding="20dp"
            android:backgroundTint="@color/md_theme_secondaryContainer"
            app:icon="@android:drawable/ic_menu_preferences"
            app:iconSize="30dp"
            app:iconTint="@color/md_theme_secondary" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/navBarMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHomeMenu"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:backgroundTint="@color/md_theme_primaryContainer"
            app:icon="@drawable/image_13"
            app:iconSize="40dp"
            app:iconTint="@color/md_theme_primary" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.IconButton"
            android:id="@+id/btnCoffeeMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_theme_primaryContainer"
            app:icon="@drawable/image_11"
            app:iconSize="40dp"
            app:iconTint="@color/md_theme_primary" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.IconButton"
            android:id="@+id/btnUserMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:backgroundTint="@color/md_theme_primaryContainer"
            app:icon="@drawable/image_7"
            app:iconSize="40dp"
            app:iconTint="@color/md_theme_primary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>