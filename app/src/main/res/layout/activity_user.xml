<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:padding="16dp"
    tools:context=".UserActivity">



    <LinearLayout
        android:id="@+id/main_columns_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/column_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_background"
                android:gravity="center"
                android:padding="12dp"
                android:text="Recetas Favoritas"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/recipe_button_background"
                android:text="Receta 1"
                android:textColor="#FFFFFF" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/recipe_button_background"
                android:text="Receta 2"
                android:textColor="#FFFFFF" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/recipe_button_background"
                android:text="Receta 3"
                android:textColor="#FFFFFF" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/recipe_button_background"
                android:text="Receta 4"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/column_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_background"
                android:gravity="center"
                android:padding="12dp"
                android:text="Mis datos personales"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Teléfono"
                android:inputType="phone"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Dirección"
                android:inputType="textPostalAddress"
                android:padding="12dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/header_background"
                android:gravity="center"
                android:padding="12dp"
                android:text="Contáctanos"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="+56 9 1453 1625"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="Políticas de Seguridad"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="Ayuda"
                android:textColor="#333333" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnexit"
        android:layout_width="224dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:text="Cerrar sesión"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_columns_container"
        app:layout_constraintWidth_percent="0.6" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-15dp"
        tools:layout_editor_absoluteY="16dp">


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#25FFFFFF"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_marginTop="19dp"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/image_7" />

        <ImageButton
            android:id="@+id/btnConf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#25FFFFFF"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_preferences" />



    </LinearLayout>

    <FrameLayout
        android:id="@+id/navMenuCoffee"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-2dp">

        <ImageButton
            android:id="@+id/btnHomeMenu"
            android:layout_width="75dp"
            android:layout_height="69dp"
            android:backgroundTint="#25FFFFFF"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="100px"
            android:layout_marginEnd="100px"
            android:src="@drawable/image_13" />

        <ImageButton
            android:id="@+id/btnCoffeeMenu"
            android:layout_width="75dp"
            android:layout_height="69dp"
            android:backgroundTint="#25FFFFFF"
            android:layout_gravity="center|center_horizontal"
            android:src="@drawable/image_11" />

        <ImageButton
            android:id="@+id/btnUserMenu"
            android:layout_width="75dp"
            android:layout_height="69dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="100px"
            android:src="@drawable/image_7" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>