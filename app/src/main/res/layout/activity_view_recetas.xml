<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRecetasActivity">


    <LinearLayout
        android:id="@+id/Lltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#25FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="baristablend"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textSize="24dp"
            android:layout_marginStart="39dp"
            android:textStyle="bold"
            />
        <ImageButton
            android:id="@+id/btnConf"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="#D1FFFFFF"
            android:src="@android:drawable/ic_menu_manage"
            android:layout_marginStart="28dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"/>


    </LinearLayout>

    <TextView
        android:id="@+id/divider"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#3A070101"
        app:layout_constraintTop_toBottomOf="@id/Lltitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />






    <LinearLayout
        android:id="@+id/Llrecetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#9A1B1717"
            android:text="James hoffman "/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:tint="#EAC5C5D3"
            android:layout_gravity="center"
            android:backgroundTint="#000000"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#9A1B1717"
            android:layout_marginTop="10dp"
            android:text="Tetsu Kasuya"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:tint="#EAC5C5D3"
            android:layout_gravity="center"
            android:backgroundTint="#000000"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#9A1B1717"
            android:text="Lance Hedrick"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:tint="#EAC5C5D3"
            android:layout_gravity="center"
            android:backgroundTint="#000000"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#9A1B1717"
            android:layout_marginTop="10dp"
            android:text="Bojack Horseman"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:tint="#EAC5C5D3"
            android:layout_gravity="center"
            android:backgroundTint="#000000"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#9A1B1717"
            android:text="Smiling Friends"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:tint="#EAC5C5D3"
            android:layout_gravity="center"
            android:backgroundTint="#000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#9A1B1717"
            android:layout_gravity="center"
            android:text="Agregar receta"/>


    </LinearLayout>


    <TextView
        android:id="@+id/tvRecientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usado recientemente:"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/Llrecetas"/>

    <Button
        android:id="@+id/btnRecientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bojack Horseman"
        android:backgroundTint="#9A1B1717"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRecientes" />






    <FrameLayout
        android:id="@+id/navBarMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:backgroundTint="#26101010">

        <ImageButton
            android:id="@+id/btnHomeMenu"
            android:layout_width="75dp"
            android:layout_height="69dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="100px"
            android:backgroundTint="#25615858"
            android:layout_marginEnd="100px"
            android:src="@drawable/image_13" />

        <ImageButton
            android:id="@+id/btnCoffeeMenu"
            android:layout_width="75dp"
            android:layout_height="69dp"
            android:layout_gravity="center|center_horizontal"
            android:backgroundTint="#25615858"
            android:src="@drawable/image_11" />

        <ImageButton
            android:id="@+id/btnUserMenu"
            android:layout_width="75dp"
            android:layout_height="69dp"
            android:backgroundTint="#25615858"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="100px"
            android:src="@drawable/image_7" />

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>